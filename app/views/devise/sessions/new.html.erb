<div class="forms-forms">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true,placeholder:'Email', autocomplete: "email",class:"form-control" %>
  </div>

  <div class="field">
    <%= f.password_field :password,placeholder:'Password', autocomplete: "new-password", class:"form-control"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:'btn btn-success btn-sm' %>
  </div>
  <div class="actions">
    <%= link_to "Sign Up", new_user_registration_path %>
  </div>
<% end %>
</div>